-- spacey reggae with loopAt control
d1 $ stack [
  s "bd(2,8)" # gain "1.0", -- minimal kick
  s "~ sn:2" # gain "0.9" # room "0.8", -- echoed snare
  loopAt 2 $ s "space:3(3,8)" # gain "0.75" # speed "0.8" # pan sine, -- space swooshes with 2-cycle loop
  loopAt 1 $ s "~ reggae:1" # gain "0.8" # delay "0.6" # delaytime "0.25" -- delayed guitar with 1-cycle loop
] # room "0.6" # orbit 0
